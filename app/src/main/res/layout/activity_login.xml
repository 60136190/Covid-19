<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".activities.LoginActivity">

    <TextView
        android:id="@+id/tv_covid19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/goblin_one"
        android:gravity="center"
        android:text="COVID 19"
        android:textColor="@color/main_color"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_login"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="26dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Application"
        android:textSize="@dimen/_18ssp"
        android:textColor="@color/main_color"
        app:layout_constraintLeft_toLeftOf="@+id/tv_covid19"
        app:layout_constraintRight_toRightOf="@+id/tv_covid19"
        app:layout_constraintTop_toBottomOf="@+id/tv_covid19"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in"
        android:textAllCaps="false"
        android:background="@drawable/border_button_getstart"
        app:backgroundTint="@color/main_color"
        android:layout_margin="@dimen/_30sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:layout_width="@dimen/_200sdp"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_login_using_fb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:text="Sign in using facebook"
        android:textAllCaps="false"
        android:background="@drawable/border_button_getstart"
        app:backgroundTint="#135EBA"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:drawableLeft="@drawable/icon_facebook"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_login_using_google"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in using google"
        android:textAllCaps="false"
        android:background="@drawable/border_button_getstart"
        app:backgroundTint="@color/white"
        android:textColor="@color/main_color"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:drawableLeft="@drawable/icon_google"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login_using_fb"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is version 1.0.1"
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/_10sdp"/>
</androidx.constraintlayout.widget.ConstraintLayout>